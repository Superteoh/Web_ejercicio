---
import Layout from '../layouts/Layout.astro';
// Photoswipe y estilos


---
<Layout></Layout>
      

<!-- Contenedor principal de Swiper -->
<div class="swiper">
  <!-- Wrapper adicional requerido -->
  <div class="swiper-wrapper" id="my-slider">
    <!-- Los slides -->
    <a 
      class="swiper-slide"
      href="assets/productoravideo.png"
      data-pswp-width="800" data-pswp-height="800"
      target="_blank"
      data-cropped="true"
    >
      <img src="assets/productoravideo.png" alt="">
      <h2>Desarrollo Web</h2>
      <p>Texto descriptivo del Slide 1.</p>
    </a>
    <a
      class="swiper-slide"
      href="assets/inicio_segundoplano.webp"
      data-pswp-width="800" data-pswp-height="800"
      target="_blank"
      data-cropped="true"
    >
      <img src="assets/inicio_segundoplano.webp" alt="">
      <h2>Redes Sociales</h2>
      <p>Texto descriptivo del Slide 2.</p>
    </a>
    <a
      class="swiper-slide"
      href="/images/image3.jpeg"
      data-pswp-width="800" data-pswp-height="800"
      target="_blank"
      data-cropped="true"
    >
      <img src="assets/Segundoplano_logo.webp" alt="">
      <h2>SEO</h2>
      <p>Texto descriptivo del Slide 3.</p>
    </a>
    <a
      class="swiper-slide"
      href="/images/image4.jpeg"
      data-pswp-width="800" data-pswp-height="800"
      target="_blank"
      data-cropped="true"
    >
      <img src="/images/image4.jpeg" alt="">
      <h2>Redaccion de Copy y Blog</h2>
      <p>Texto descriptivo del Slide 4.</p>
    </a>
    <a
      class="swiper-slide"
      href="/images/image5.jpeg"
      data-pswp-width="800" data-pswp-height="800"
      target="_blank"
      data-cropped="true"
    >
      <img src="/images/image4.jpeg" alt="">
      <h2>Google Ads</h2>
      <p>Texto descriptivo del Slide 5.</p>
     </a>
     <a
      class="swiper-slide"
      href="/images/image5.jpeg"
      data-pswp-width="800" data-pswp-height="800"
      target="_blank"
      data-cropped="true"
    >
      <img src="/images/image4.jpeg" alt="">
      <h2>Networking para profesionales</h2>
      <p>Texto descriptivo del Slide 6</p>
     </a>
  </div>
  <!-- Botones de navegación -->
  <div class="swiper-button-prev"></div>
  <div class="swiper-button-next"></div>

  <div class="fixed bottom-0 w-full bg-gray-900 text-white p-4">
    <div class="max-w-screen-lg mx-auto flex justify-between items-center">
      <p class="text-sm">Este sitio web utiliza cookies para garantizar que obtengas la mejor experiencia en nuestro sitio web.</p>
      <button class="bg-white text-gray-900 px-4 py-2 rounded shadow hover:bg-gray-200">Aceptar</button>
    </div>
  </div>
<script>
  // Core de Swiper y estilos
  import Swiper from 'swiper';
  import 'swiper/css';
  // Módulo Navigation de Swiper y estilos
  import { Navigation } from "swiper/modules";
  import "swiper/css/navigation";
  import PhotoSwipeLightbox from 'photoswipe/lightbox';
  import 'photoswipe/style.css';

  // Configurar Swiper
  const swiper = new Swiper(".swiper", {
    modules: [Navigation], // definir los módulos a usar
    loop: true,            // definir si los slides estarán en bucle
    slidesPerView: 3,      // agregar número de slides para la pantalla
    spaceBetween: 40,      // separación entre slides en px
    navigation: {          // definir botones next y prev para el módulo Navigation
      prevEl: ".swiper-button-prev",
      nextEl: ".swiper-button-next",
    }
  });

    const lightbox = new PhotoSwipeLightbox({
    gallery: '#my-slider',
    children: 'a',
    pswpModule: () => import('photoswipe')
  });
    lightbox.init();
</script>
