---
import Layout from '../layouts/Layout.astro';


---

<Layout></Layout>
<style>
  .swiper-container {
    width: 80%; /* Ajusta el ancho del contenedor según tu preferencia */
    max-width: 800px; /* Establece un ancho máximo para el contenedor */
    height: 300px; /* Establece la altura del contenedor del slider */
    margin: 0 auto; /* Centra el contenedor horizontalmente */
    border: 1px solid #ccc; /* Agrega un borde al contenedor */
    border-radius: 10px; /* Ajusta el radio de los bordes */
    overflow: hidden; /* Evita que los sliders se desborden */
  }

  .swiper-slide {
    position: relative; /* Añade posición relativa para el posicionamiento absoluto del texto */
    display: flex; /* Usa flexbox para centrar vertical y horizontalmente */
    justify-content: center; /* Centra horizontalmente */
    align-items: center; /* Centra verticalmente */
    width: 100%; /* Ajusta el ancho de cada slide al 100% del contenedor */
  }

  .swiper-slide img {
    max-width: 100%; /* Ajusta el tamaño máximo de la imagen al 100% del slide */
    height: auto; /* Mantiene la proporción de la imagen */
  }

  .swiper-slide b {
    position: absolute; /* Posiciona el texto absolutamente */
    bottom: 20px; /* Ajusta la posición vertical del texto */
    left: 20px; /* Ajusta la posición horizontal del texto */
    color: white; /* Establece el color del texto */
    font-weight: bold; /* Ajusta el peso de la fuente */
    text-shadow: 2px 2px 2px rgba(0, 0, 0, 0.5); /* Agrega sombra al texto para mejor legibilidad */
    z-index: 1; /* Asegura que el texto esté sobre la imagen */
  }
</style>


<!-- Contenedor principal de Swiper -->
